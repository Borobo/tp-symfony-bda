{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <h3>{{ post.title }}</h3>
        <p>{{ post.description }}</p>
        {% if type == 'journal' %}
            <embed src="{{ asset('assets/' ~ post.filepath) }}" type="application/pdf" width="100%" height="650em">
        {% else %}
            <img src="{{ asset('assets/' ~ post.filepath) }}" alt="{{ post.title }}"
        {% endif %}
    </div>
{% endblock %}