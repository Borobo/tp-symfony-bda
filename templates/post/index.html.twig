{% extends 'base.html.twig' %}

{% block title %}Hello DatalistController!{% endblock %}

{% block body %}
<div>
    {% for post in posts %}
    <div class="row">
        <a href={{ "/posts/" ~ post.type ~ "/" ~ post.id }}>
            <h3>{{ post.title }}</h3>
            <p>{{ post.description }}</p>
        </a>
    </div>
    {% endfor %}
</div>
{% endblock %}
